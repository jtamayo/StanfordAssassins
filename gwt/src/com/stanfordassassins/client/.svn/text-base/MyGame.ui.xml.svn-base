<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:FlowPanel ui:field="myGameContentPanel">
		<g:HTMLPanel ui:field="reportPanel">
			<h3>Report an assassination</h3>
			Enter the codeword of your victim and press report.
			<g:HorizontalPanel spacing="5"><g:TextBox ui:field="victimBox" /> <g:Button ui:field="reportKillButton">Report</g:Button> </g:HorizontalPanel>
				<g:HorizontalPanel spacing="5">
					<g:Anchor ui:field="disputeWithTargetAnchor" text="Dispute with target" href="#"/> <!-- TODO: Fix the href so the link looks nice, but doesn't point to a random place in the page -->
					<g:Anchor ui:field="disputeWithAssassinAnchor" text="Dispute with assassin" href="#"/>
				</g:HorizontalPanel>
			<h3>Game information</h3>
			<g:VerticalPanel>
				<g:HTMLPanel>
					Your target is <g:InlineLabel addStyleNames="{style.important}" ui:field="targetLabel" />
				</g:HTMLPanel>
				<g:HTMLPanel>
					You have <g:InlineLabel addStyleNames="{style.important}" ui:field="timeRemainingLabel" /> hous remaining to assassinate your victim.					
				</g:HTMLPanel>
				<g:HTMLPanel>
					Your codeword for this game is <g:InlineLabel addStyleNames="{style.important}" ui:field="codewordLabel" />. Only disclose it when you're assassinated!
				</g:HTMLPanel>
				<g:HTMLPanel>
					So far you've killed <g:InlineLabel addStyleNames="{style.important}" ui:field="killedLabel" /> players.
				</g:HTMLPanel>
			</g:VerticalPanel>
				
		</g:HTMLPanel>	
	
	
		<g:HTMLPanel>
			<h3>Game News</h3>
			<g:FlexTable ui:field="feedTable" />
		</g:HTMLPanel>
	</g:FlowPanel>
</ui:UiBinder> 